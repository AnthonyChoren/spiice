<div class="container d-flex align-items-center" style="flex-direction: column ">
  <% @requests.each do |request|  %>

    <div class="container d-flex align-items-center" style="flex-direction: column ">
      <div class="card-project user-card h-100 w-100 m-2 linkable">
        <div class="card-body">
          <p class="card-title"> <strong> Status: "<%= request.status%>"</strong> </p>
          <p class="card-title"> <strong> Request for "<%= request.project.title %>"</strong> </p>
          <p class="card-text">Message: "<%= request.message %>"</p>
          <% if current_user.role == "client" %>
            <p class="card-text"><em>Request by <%= request.user.first_name %> <%= request.user.last_name %></em> </p>
            <p class="card-text"><em>Contact: <%= request.user.email %></em> </p>
            <%= link_to "Profile of designer", user_path(request.user), class: "btn btn-primary"%>
            <br>
            <hr>
            <%= link_to "Accept", edit_request_path(request), class: "button" %>
            <%= render 'shared/accept_button', project: @project, request: request %>
          <% else %>
            <hr>
            <p class="card-text">Requested at <em><%= request.created_at %> </em> </p>
            <%= link_to "View project", project_path(request.project), class: "btn btn-primary2 w-100"%>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
