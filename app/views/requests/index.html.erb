<div class="mt-3 m-3">
  <% if current_user.role == "client" %>
  <h3>Your propositions for projects</h3>
  <% else %>
  <h3>Your requests for projects</h3>
  <% end %>
</div>
<div class="container d-flex align-items-center" style="flex-direction: column ">
  <% @requests.each do |request|  %>

      <div class="card-project user-card h-100 w-100 m-2">
        <a href="<%= request_path(request) %>">
        <div class="linkable">
          <div class="card-body">
            <% if current_user.role == "client" %>
              <%= link_to "Accept", request_change_to_accepted_path(request), class: "button" %>
              <!-- if client has accepted the request  -->
            <% end %>
            <div class="d-flex justify-content-between">
              <p class="card-title"> <strong> For "<%= request.project.title %>"</strong> </p>
              <div class="btn-group btn-group-toggle" data-toggle="buttons">
                <label class="btn btn-secondary active">
                  <input type="radio" name="options" id="option1" checked> Accepted
                </label>
                <label class="btn btn-secondary">
                  <input type="radio" name="options" id="option2"> Not accepted
                </label>
              </div>
            </div>
            <p class="card-text"><%= request.message %></p>
            <p class="card-text"> Status: <%= request.status %></p>
            <%= link_to 'View details', request_path(request), class: 'btn btn-primary'  %>
          </div>
        </div>
      </a>
    </div>
  <% end %>
</div>
