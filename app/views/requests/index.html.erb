<div class="mt-3 m-3">
  <% if current_user.role == "client" %>
  <h3>Your propositions for projects</h3>
  <% else %>
  <h3>Your requests for projects</h3>
  <% end %>
</div>
<div class="container d-flex align-items-center" style="flex-direction: column ">
  <% @requests.each do |request|  %>
  <div class="card-project user-card h-100 w-100 m-2">
    <div class="card-body">
      <p class="card-title"> <strong> For "<%= request.project.title %>"</strong> </p>
      <p class="card-text"><%= request.message %></p>
      <%= link_to 'View details', request_path(request), class: 'btn btn-primary'  %>
    </div>
  </div>
  <% end %>
</div>
