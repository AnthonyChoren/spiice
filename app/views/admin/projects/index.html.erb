<div class="container">
  <div class="row">
    <div class="col">
      <div class="mt-3 m-3 d-flex justify-content-between align-items-center">
  <div>
    <h3>Your Projects</h3>
  </div>
  <div class="mt-3 m-3">
    <%= link_to "Add a new project", new_admin_project_path, class: "btn btn-primary2"%>
  </div>
</div>

<div class="mr-2">
  <% @projects.each do |project|  %>

  <div class="card mb-2">
    <div class="card-body">
       <% if project.user.photo.attached? %>
          <%= cl_image_tag project.user.photo.key, alt: "alttext", class: 'card-img-top' %>
        <% else %>
          <%= cl_image_tag ("logo_ddfsxd"), class: 'card-img-top'%>
      <% end %>
      <p class="card-title"> <strong><%= project.title %></strong> </p>
      <p class="card-text"><%= project.description %></p>
      <%= link_to 'View details', project_path(project), class: 'btn btn-primary'  %>
      <br>
      <br>
      <%= link_to 'View your propositions for this project', requests_path(project), class: 'btn btn-primary'  %>
    </div>
  </div>
  <% end %>
</div>
<br>
<br>
<br>
<br>
<br>
    </div>
  </div>
</div>

