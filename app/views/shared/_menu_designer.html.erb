<div class="container">
  <div class="menu">
    <div class="box">
      <div>
        <%= link_to designer_projects_path do %>
          <i class="ri-dashboard-line <%= 'active' if current_page?(designer_projects_path) %>"></i>
        <% end %>
      </div>
      <div>
        <%= link_to projects_path do %>
          <i class="ri-search-line <%= 'active' if current_page?(projects_path) %>"></i>
        <% end %>
      </div>
      <div>
        <% if (current_user.requests.where(seen: false)).count > 0 %>
          <span class='dot-request' style="background-color: #7EBA65;"><%=  (current_user.requests.where(seen: false) && current_user.requests.where(status: "accepted")).count %></span>
        <% end %>
        <%= link_to requests_path do %>
          <i class="ri-discuss-line <%= 'active' if current_page?(requests_path) %>">
          </i>
        <% end %>
      </div>
      <div>
        <%= link_to user_path(current_user) do %>
          <i class="ri-account-circle-line <%= 'active' if current_page?(user_path(current_user)) %>"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
