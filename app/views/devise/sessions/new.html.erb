<div class="container">
  <div class="row">
    <div class="col" style="margin-top: 24px; margin-bottom: 24px;">
      <h2 style="color: white;">Log in</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs mt-5" style="color: white;">
            <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions" style="margin-top: 24px; margin-bottom: 24px;" >
            <%= f.button :submit, "Log in", class: 'btn btn-primary2'%>
          </div>
        <% end %>
      <div class="mt-5">
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>
