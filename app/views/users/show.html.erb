<!-- DESIGNER -->
<% if @user.role == 'designer' %>
  <div class="container">
    <div class="row">
      <div class="col profile-banner bg-primary">
        <h1 class="title text-white">Profile</h1>
         <div class="justify-content-center">
          <br>
          <% if @user == current_user  %>
            <%= link_to "Edit profile", edit_user_registration_path, class: 'text-white btn-primary2' %>
            <%= link_to "Log-out", destroy_user_session_path, method: :delete, class: 'text-white btn-primary2' %>
          <% end %>
          </div>
      </div>
    </div>
    <div class="row">
      <div class="col mt-4">
        <div class="d-flex">
          <% if @user.photo.attached? %>
            <%= cl_image_tag @user.photo.key, alt: "alttext", class: 'profil-pic' %>
          <% else %>
            <%= cl_image_tag ("logo_ddfsxd"), class: 'profil-pic'%>
          <% end %>
          <h4 class="name-title"><%= @user.first_name + ' ' + @user.last_name %></h3>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col mt-4">
        <h5>Resume</h5>
        <p><%= @user.bio %></p>
      </div>
    </div>
    <% if @user != current_user  %>
    <div class="row">
      <div class="col mt-1 d-flex align-items-center m-2" style="flex-direction: row ">
        <p><i class="fab fa-linkedin-in text-primary m-2" style="font-size: 2rem;"></i></p>
        <p><i class="fab fa-instagram text-primary m-2" style="font-size: 2rem;"></i></p>
      </div>
    </div>
    <% end %>
    <% if current_user.id == @user.id %>
      <div id="shots"></div>
    <% end %>
    <div class="row">
      <div class="col mt-4">
        <h5>Portfolio</h5>
      </div>
      <div class="flex">
        <div class="d-flex flex-wrap justify-content-center" id="dribbble-shots">
          <% @repos.each do |shot| %>
            <div class="dribbble-card">
              <img src="<%= shot["images"]["one_x"] %>" alt="" class="shot">
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div style="height: 120px"></div>
  </div>

<!-- CLIENT -->
<% else %>
  <div class="container">
    <div class="row">
      <div class="col">
        <h1 class="title text-white mb-4">Profile</h1>
        <div class="mb-2 pb-2" style="display: flex; align-items: center; justify-content: flex-end;">
          <div>
            <% if @user == current_user %>
              <%= link_to "Edit profile", edit_user_registration_path, class: 'text-white btn-primary2', style: 'margin-right: 8px;' %>
              <%= link_to "Log-out", destroy_user_session_path, method: :delete, class: 'text-white btn-primary2' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container ecran-blanc" style="height: 100vh;">
    <div class="row mt-4">
      <div class="col mt-4">
        <div class="d-flex">
          <% if @user.photo.attached? %>
            <%= cl_image_tag @user.photo.key, alt: "alttext", class: 'profil-pic' %>
          <% else %>
            <%= image_tag "spiice.jpg", alt: "alttext", class: "profil-pic" %>
          <% end %>
          <h4 class="name-title"><%= @user.first_name + ' ' + @user.last_name %></h3>
        </div>
      </div>
    </div>
    <div class="row mt-4">
      <div class="col">
        <h5>Resume</h5>
        <p><%= @user.bio %></p>
      </div>
    </div>
    <% if @user != current_user  %>
      <div class="row mt-1">
        <div class="col d-flex align-items-center" style="flex-direction: row ">
          <p><i class="fab fa-linkedin-in text-primary m-2" style="font-size: 2rem;"></i></p>
          <p><i class="fab fa-instagram text-primary m-2" style="font-size: 2rem;"></i></p>
        </div>
      </div>
    <% end %>
      <div class="row mt-1">
          <ul class="list">
            <h5>My projects</h5>
              <% @user.projects.each do |project| %>
                <div class="card-body d-flex justify-content-start w-100">
                  <li> <%= link_to project.title , project_path(project), class: "btn btn-primary3" %></li>
                </div>
              <% end %>
          </ul>
        </div>
      </div>
    </div>
<% end %>
