      </div>
    </div>

    <div class="row">
      <div class="col mt-4">
        <div class="d-flex">
          <% if @user.photo.attached? %>
            <%= cl_image_tag @user.photo.key, alt: "alttext", class: 'profil-pic' %>
          <% else %>
            <%= cl_image_tag ("logo_ddfsxd"), class: 'profil-pic'%>
          <% end %>
          <h4 class="name-title"><%= @user.first_name + ' ' + @user.last_name %></h3>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col mt-4">
        <h5>Resume</h5>
        <p>UX/UI Designer from San Jose with 10 year of experience.</p>
      </div>
    </div>

    <div class="row">
      <div class="col mt-4">
        <h5>Links</h5>
        <p>LinkedIn</p>
      </div>
    </div>

    <div class="row">
      <ul class="list">
      <% @user.projects.each do |project| %>
