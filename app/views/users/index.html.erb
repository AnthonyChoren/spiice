<div class="container">
  <div class="row">
    <div class="col mt-1">
      <div>
        <h1 class="title text-white">All designers</h1>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col">
<!-- search bar for designers -->
      <%= form_tag users_path, method: :get, class: 'form-inline' do %>
        <form class="form-inline">
          <div class="form-group mx-sm-3 mb-2 search-form">
            <%= text_field_tag :query, params[:query], class: "form-control search-input", placeholder: "Find a designer" %>
          </div>
            <%= submit_tag "Submit", class: "btn btn-primary mb-2 search-btn" %>
        </form>
      <% end %>
    </div>
<!-- end of search bar for designers -->
  </div>
  <% @users.each do |user| %>
    <%= link_to user_path(user) do %>
      <div class="row mt-3 projects-card" style="color: #8C8C95">
        <div class="col-2 d-flex justify-content-center">
          <% if user.photo.attached? %>
            <%= cl_image_tag user.photo.key, alt: "alttext", class: 'designers-card-avatar' %>
          <% else %>
            <%= image_tag "spiice.jpg", class: 'designers-card-avatar' %>
          <% end %>
        </div>
        <div class="col-10">
          <h4 class="designers-card-title "><%= "#{user.first_name.capitalize} #{user.last_name.capitalize}" %></h4>
          <p class="designers-card-text"><%= user.bio.first(72)... %></p>
        </div>
      </div>
    <% end %>
  <% end %>
  <div style="height: 150px;">
  </div>
</div>
