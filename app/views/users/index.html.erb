<div class="m-3">
  <h3><strong></strong>Our best designers</h3>
  <h5><em>Find the right mate!</em></h5>
</div>
<div class="container d-flex align-items-center" style="flex-direction: column ">
  <% @users.each do |user| %>
  <div  class="col-sm-8 offset-sm-2">
    <div class="row"  >
      <div class="card-project project-card mt-1 h-100" >
        <div class="card-header">
          <h6><%=user.first_name.capitalize %> <%= user.last_name.capitalize %></h6>
        </div>
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <%= image_tag "logo.png", alt: "alttext", class: "image-card-project m-2 mr-3 mt-1"%>
            <p class="card-text"><strong>Biography : <br></strong><em><%= user.bio %></em></p>
          </div>
          <hr>
          <div class="d-flex justify-content-center">
            <%= link_to 'Take a look !', user_path(current_user), class: "btn btn-primary w-100" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
